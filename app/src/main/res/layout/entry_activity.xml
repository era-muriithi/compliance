<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#0063FF"
    android:layout_height="match_parent"
    tools:context="com.example.smartcompliance.EntryActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/truck"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:hint="Truck No."
            android:inputType="text" />
        <EditText
            android:id="@+id/haulier"
            android:padding="8dp"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:hint="Haulier."
            android:inputType="text" />
        <EditText
            android:id="@+id/delivery"
            android:padding="8dp"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:hint="Delivery No."
            android:inputType="textMultiLine" />
        <EditText
            android:id="@+id/destination"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:padding="8dp"
            android:hint="Destination"
            android:inputType="text" />
        <EditText
            android:id="@+id/variance"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:padding="8dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:hint="Variance"
            android:inputType="text" />
        <EditText
            android:id="@+id/loaded"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:padding="8dp"
            android:hint="Loaded UDV/Beer"
            android:inputType="text" />
        <EditText
            android:id="@+id/replace"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:padding="8dp"
            android:hint="Replacement"
            android:inputType="text|textMultiLine" />
        <EditText
            android:id="@+id/under"
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/edittexttheme"
            android:ems="10"
            android:padding="8dp"
            android:hint="Under/overload"
            android:inputType="text|textMultiLine"
            android:maxLength="2000"
            android:maxLines="4"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <Button
               android:id="@+id/add_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="start"
               android:layout_margin="10dp"
               android:background="@drawable/home_button"
               android:text="Save"
               android:layout_weight="0.5"/>

           <Button
               android:id="@+id/view_btn"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="start"
               android:layout_margin="10dp"
               android:background="@drawable/home_button"
               android:text="View"
               android:layout_weight="0.5"/>
       </LinearLayout>



    </LinearLayout>

</ScrollView>